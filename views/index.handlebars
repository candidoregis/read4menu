<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="menuItem-category">MenuItem Category</label>
            <input type="text" id="menuItem-category" class="form-control" aria-describedby="menuItem-category" placeholder="Enter MenuItem category">
          </div>
          <div class="form-group">
            <label for="menuItem-title">MenuItem Title</label>
            <input type="text" id="menuItem-title" class="form-control" aria-describedby="menuItem-title" placeholder="Enter MenuItem Title">
          </div>
          <div class="form-group">
            <label for="menuItem-description">MenuItem Description</label>
            <textarea class="form-control" id="menuItem-description" aria-describedby="menuItem-description" placeholder="Enter MenuItem Description"></textarea>
          </div>
          <div class="form-group">
            <label for="menuItem-price">MenuItem Price</label>
            <input type="text" id="menuItem-price" class="form-control" aria-describedby="menuItem-price" placeholder="Enter MenuItem Price">
          </div>
          <button id="submit" class="btn btn-primary float-left">Submit</button>
        </form>
        <button id="playMenu" class="btn btn-primary float-right">Play Menu</button>
        <h3>MenuItems:</h3>
        <ul id="menuItem-list" class="list-group">
          {{#each menuItems}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="menuItem/{{this.id}}">{{this.title}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
